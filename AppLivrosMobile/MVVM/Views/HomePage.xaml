<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppLivrosMobile.MVVM.Views.HomePage"
             xmlns:models="clr-namespace:AppLivrosMobile.MVVM.Models"
             xmlns:converter="clr-namespace:AppLivrosMobile.Converter"
             xmlns:viewmodel="clr-namespace:AppLivrosMobile.MVVM.ViewModels"
             Shell.NavBarIsVisible="False"
             Title="HomePage"
             BackgroundColor="{StaticResource Primary}">

    <RefreshView  IsRefreshing="{Binding Refreshing}"
                    Command="{Binding RefreshDataCommand}">
        <ScrollView>
            <Grid>
                <VerticalStackLayout Padding="10, 15">

                    <Label>
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="OlÃ¡, &#10;"
                          Style="{StaticResource H2}"/>
                                <Span Text="Marcos"
                          Style="{StaticResource H2}"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <CollectionView ItemsSource="{Binding Categories}" 
                    SelectionMode="Single"
                    SelectedItem="{Binding 
                    SelectedCategory, Mode=TwoWay}" >
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Horizontal"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:Category">
                                <Border  WidthRequest="150" Margin="10" Padding="10" StrokeShape="RoundRectangle 15" >
                                    <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                                        <Image Source="{Binding ImageUrl}" Aspect="AspectFill" WidthRequest="20"/>
                                        <Label Text="{Binding Name}" Style="{StaticResource H3}"/>
                                    </HorizontalStackLayout>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Label Text="Mais Recentes" Style="{StaticResource H1}" />

                    <CollectionView ItemsSource="{Binding Books}"  
                                SelectionMode="Single"
                                SelectedItem="{Binding 
                                SelectedBook, Mode=TwoWay}">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Horizontal" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate >
                                <!--x:DataType="models:Book"-->

                                <Grid  Padding="5" RowDefinitions="*,Auto" RowSpacing="10">
                                    <VerticalStackLayout Spacing="5">
                                        <Border>
                                            <Grid ColumnDefinitions="Auto,Auto" ColumnSpacing="10">

                                                <Image Source="{Binding ImageUrl}" 
                                                       Aspect="AspectFill"
                                                       WidthRequest="150"
                                                       HeightRequest="200"
                                                       VerticalOptions="Center"
                                                       HorizontalOptions="Start"/>

                                                <VerticalStackLayout  Grid.Column="1" Margin="5" Spacing="10">
                                                    <Label  Text="{Binding Check, Converter={StaticResource CheckViewBook}}" Style="{StaticResource H4}"/>
                                                    <Label  Text="{Binding PageTotal, StringFormat='Total de paginas {0}'}" Style="{StaticResource H4}"/>
                                                    <Label  Text="{Binding PageIndex, StringFormat='Total de paginas lidas {0}'}" Style="{StaticResource H4}"/>
                                                </VerticalStackLayout>
                                            </Grid>
                                        </Border>

                                    </VerticalStackLayout>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Label Text="Lidos Recetimentes" Style="{StaticResource H1}" />

                    <CollectionView ItemsSource="{Binding BooksCheck}"  
                                SelectionMode="Single"
                                SelectedItem="{Binding 
                                SelectedBook, Mode=TwoWay}">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Horizontal" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate >
                                <!--x:DataType="models:Book"-->

                                <Grid  Padding="5" RowDefinitions="*,Auto" RowSpacing="10">
                                    <VerticalStackLayout Spacing="5">
                                        <Border>
                                            <Grid ColumnDefinitions="Auto,Auto" ColumnSpacing="10">

                                                <Image Source="{Binding ImageUrl}" 
                                                       Aspect="AspectFill"
                                                       WidthRequest="150"
                                                       HeightRequest="200"
                                                       VerticalOptions="Center"
                                                       HorizontalOptions="Start"/>

                                                <VerticalStackLayout  Grid.Column="1" Margin="5" Spacing="10">
                                                    <Label  Text="{Binding Check, Converter={StaticResource CheckViewBook}}" Style="{StaticResource H4}"/>
                                                    <Label  Text="{Binding PageTotal, StringFormat='Total de paginas {0}'}" Style="{StaticResource H4}"/>
                                                    <Label  Text="{Binding PageIndex, StringFormat='Total de paginas lidas {0}'}" Style="{StaticResource H4}"/>
                                                </VerticalStackLayout>
                                            </Grid>
                                        </Border>

                                    </VerticalStackLayout>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    
                </VerticalStackLayout>

                <Grid IsVisible="{Binding IsBusy}">
                    <BoxView Color="{StaticResource Primary}"/>
                    <VerticalStackLayout HorizontalOptions="Center"
                     VerticalOptions="Center">
                        <ActivityIndicator IsRunning="True"
                       Color="white"
                       HorizontalOptions="Center"/>
                        <Label Text="Carregando..."
                           TextColor="{StaticResource White}"
                           HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Grid>
            </Grid>
        </ScrollView>
    </RefreshView>
</ContentPage>